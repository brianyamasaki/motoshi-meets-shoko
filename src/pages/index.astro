---
import Layout from '../layouts/Layout.astro';
import WeekAtAGlance from '../components/Week-at-a-Glance.astro';

type PI = {
	img: string;
	label: string;
	dayStart: number;
};

const pageImages: PI[] = [
	{
		img: "img/week1.png",
		label: "The first week of Motoshi's trip to Japan",
		dayStart: 83,
	},
	{
		img: "img/week2.png",
		label: "",
		dayStart: 90
	},
	{
		img: "img/week3.png",
		label: "",
		dayStart: 97
	},
	{
		img: "img/week4.png",
		label: "",
		dayStart: 104
	},
	{
		img: "img/week5.png",
		label: "",
		dayStart: 111
	},
	{
		img: "img/week6.png",
		label: "",
		dayStart: 118
	},
	{
		img: "img/week7.png",
		label: "",
		dayStart: 125
	},
];
---

<Layout title="Motoshi Meets Shoko">
	<main>
		<h1>Motoshi Meets Shoko</h1>
		<ul role="list" id="day-planner-pages">
			{pageImages.map(pi => (
				<WeekAtAGlance img={pi.img} alt={pi.label} dayStart={pi.dayStart} />
			))}
		</ul>
	</main>
</Layout>

<style lang="scss">
	main {
		margin: auto;
		padding: 1.5rem;
	}
	h1 {
		font-family: Literata, Georgia, 'Times New Roman', Times, serif;
		font-size: 3rem;
		text-align: center;
		font-weight: 800;
		margin: 0;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	#day-planner-pages {
		list-style: none;
	}
</style>
